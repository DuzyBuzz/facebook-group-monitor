{
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@types/puppeteer": "^5.4.7",
    "electron": "^36.3.1",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "name": "facebook-scrape",
  "version": "1.0.0",
  "main": "src/ui/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "npx ts-node src/index.ts",
    "build": "tsc && electron-builder",
    "start": "concurrently \"npm run dev\" \"electron ./src/ui/main.js\"",
    "package-win": "electron-packager . FacebookGroupCheck --platform=win32 --arch=x64 --icon=crawling.ico --out=release-build --overwrite",
    "package-mac": "electron-packager . FacebookGroupCheck --platform=darwin --arch=arm64 --icon=crawling.icns --out=release-build --overwrite"

  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "chrono-node": "^2.8.0",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.5.0",
    "exceljs": "^4.4.0",
    "fs": "^0.0.1-security",
    "puppeteer": "^24.6.1",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-recaptcha": "^3.6.8",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "xlsx": "^0.18.5"
  },
  "build": {
    "appId": "com.duzybuzz.facebookgroupcheck",
    "productName": "Facebook Group Check",
      "mac": {
    "target": "dmg",
    "icon": "crawling.icns"
  },
    "files": [
      "dist/**/*",
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "crawling.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Facebook Group Check"
    }
  }
}